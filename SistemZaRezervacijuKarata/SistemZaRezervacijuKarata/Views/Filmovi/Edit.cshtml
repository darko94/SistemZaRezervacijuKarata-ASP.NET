@model SistemZaRezervacijuKarata.Models.Film

@{
    ViewData["Title"] = "Izmena filma";
}

<h2>Izmena filma</h2>

<hr />
<div class="row">
    <div class="container add-film-container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Naslov" class="control-label"></label>
                <input asp-for="Naslov" class="form-control" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrgininalniNaslov" class="control-label"></label>
                <input asp-for="OrgininalniNaslov" class="form-control" />
                <span asp-validation-for="OrgininalniNaslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PocetakPrikazivanja" class="control-label"></label>
                <input asp-for="PocetakPrikazivanja" class="form-control" />
                <span asp-validation-for="PocetakPrikazivanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuzinaTranjanja" class="control-label"></label>
                <input asp-for="DuzinaTranjanja" class="form-control" />
                <span asp-validation-for="DuzinaTranjanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drzava" class="control-label"></label>
                <input asp-for="Drzava" class="form-control" />
                <span asp-validation-for="Drzava" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Godina" class="control-label"></label>
                <input asp-for="Godina" class="form-control" />
                <span asp-validation-for="Godina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zanr" class="control-label"></label>
                <input asp-for="Zanr" class="form-control" />
                <span asp-validation-for="Zanr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <textarea asp-for="Opis" class="form-control"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YoutubeUrl" class="control-label"></label>
                <input asp-for="YoutubeUrl" class="form-control" />
                <span asp-validation-for="YoutubeUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SlikaUrl" class="control-label"></label>
                <input asp-for="SlikaUrl" class="form-control" />
                <span asp-validation-for="SlikaUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Izmeni" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default btn-sm">Odustani</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
