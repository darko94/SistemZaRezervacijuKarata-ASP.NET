@model IEnumerable<SistemZaRezervacijuKarata.Models.Rezervacija>

@{
    ViewData["Title"] = "Rezervacije";
}

<div class="container">
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr class="active" style="color: black;">
                <th>@Html.DisplayNameFor(model => model.BrojKarata)</th>
                <th>@Html.DisplayNameFor(model => model.Korisnik)</th>
                <th>@Html.DisplayNameFor(model => model.Projekcija)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr class="info" style="color: black;">
                    <td>@item.BrojKarata</td>
                    <td>@item.Korisnik.Email</td>
                    <td>@item.Projekcija.Film.Naslov - @item.Projekcija.Datum.ToString("dd.MM.yyyy.") - @item.Projekcija.Vreme.ToString("HH:mm")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.ID" style="color: red;"><span class="glyphicon glyphicon-remove"></span> Obriši</a>
                    </td>
                </tr>

            }
        </thead>
    </table>
</div>